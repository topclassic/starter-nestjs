{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "types": ["node"],
    "incremental": true,
    "paths": {
      "@middleware/*": ["middleware/*"],
      "@auth/*": ["v1/auth/*"],
      "@session/*": ["v1/session/*"],
      "@user/*": ["v1/user/*"],
      "@global/*": ["v1/*"],
      "@restApi/*": ["restApi/*"],
      "@utils/*": ["utils/*"],
      "@guard/*": ["guard/*"],
      "@database/*": ["database/*"],
      "@config/*": ["config/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
